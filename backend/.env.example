# =============================================================================
# MARG Backend Configuration
# Copy to .env and fill in real values before deploying
# =============================================================================

# --- Core ---
SECRET_KEY=change-me-to-a-random-64-char-string
DEV_MODE=false
DOMAIN=localhost

# --- API Configuration ---
API_V1_STR=/api/v1
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- Database ---
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me
POSTGRES_DB=app

# --- MinIO (Object Storage) ---
MINIO_ENDPOINT=localhost:9010
MINIO_ACCESS_KEY=change-me
MINIO_SECRET_KEY=change-me
MINIO_BUCKET=infrastructure-evidence
MINIO_SECURE=false

# --- CORS (comma-separated or JSON array) ---
BACKEND_CORS_ORIGINS=["http://localhost:3011"]

# --- Email / SMTP ---
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=info@marg.gov.in
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_STARTTLS=True
MAIL_SSL_TLS=False
USE_CREDENTIALS=True

# --- Frontend URL (for CORS and redirects) ---
FRONTEND_URL=http://localhost:3011
